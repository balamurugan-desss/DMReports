@model IEnumerable<Keyword_Suggesion.Models.ProjectKeyword>

@{
    ViewBag.Title = "ProjectKeywordList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<h2>@ViewBag.Project - Keyword List</h2>
<hr />
@*<p>
    @Html.ActionLink("Create New Keyword", "CreateKeyword", new { Project = @ViewBag.ProjectName })
</p>*@
<table class="table" id="Table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KeywordName)
            </th>
            <th></th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KeywordName)
            </td>
            <td>@Html.HiddenFor(modelItem => item.ProjectName)</td>

            <td>
                @Html.ActionLink("Suggesion Keywords", "SuggesionKeywords", new { Keyword = item.KeywordName, Project = item.ProjectName })
                @*@Html.ActionLink("Delete Keywords", "DeleteProjectKeyWord", new { Id = item.Id },new { onclick = "return confirm('Are you sure you want to delete this ?');" })*@

            </td>
        </tr>
    }
        </tbody>
</table>
<div>
    @Html.ActionLink("Back to Project", "SelectedProjectList", new { ProjectName = ViewBag.Project})
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#Table').dataTable({
        responsive: true,
        "pageLength": 100
    });

</script>